#!/bin/bash

#save rc to dotfiles in collected files
cp ~/.bashrc ~/cain/collected-files/dotfiles


dconf dump / > ~/cain/collected-files/cinnamon/cinnamon-settings

cp ~/.config/input-remapper-2/presets/AT\ Translated\ Set\ 2\ keyboard/rhett-keybindings.json ~/cain/collected-files/input-remapper

cp ~/.config/input-remapper-2/config.json ~/cain/collected-files/input-remapper

cp ~/.config/micro/bindings.json ~/cain/collected-files/micro
cp ~/.config/micro/settings.json ~/cain/collected-files/micro

input-remapper-control --command autoload
